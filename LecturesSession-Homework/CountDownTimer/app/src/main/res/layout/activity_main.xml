<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.cuong.countdowntimer.MainActivity">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:id="@+id/txtv_time"
        android:text="TIME"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:textSize="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btn_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_sec"
        android:layout_marginTop="20dp"
        android:text="@string/start"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"/>

    <Button
        android:id="@+id/btn_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="@string/stop"
        android:layout_alignParentRight="true"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"/>

    <LinearLayout
        android:id="@+id/ll_sec"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_min">
        <EditText
            android:id="@+id/edt_sec"
            android:layout_weight="1"
            android:layout_width="1dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/txtv_sec"
            android:text="@string/secs"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_min"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtv_time"
        android:layout_marginTop="100dp">
        <EditText
            android:id="@+id/edt_min"
            android:layout_weight="1"
            android:layout_width="1dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/txtv_min"
            android:text="@string/mins"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</RelativeLayout>

</ScrollView>
