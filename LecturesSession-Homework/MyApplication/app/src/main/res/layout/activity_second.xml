<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#2befdb"
    tools:context="com.example.cuong.activitylifecycle.SecondActivity">

    <TextView
        android:id="@+id/txtv_activity2"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/activity_b"/>

    <TextView
        android:id="@+id/txtv_on_create_act2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="onCreate"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/txtv_activity1"/>

    <TextView
        android:id="@+id/txtv_on_start_act2"
        android:text="onStart"
        android:layout_below="@+id/txtv_on_create_act2"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txtv_on_restart_act2"
        android:text="onRestart"
        android:layout_below="@+id/txtv_on_start_act2"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txtv_on_resume_act2"
        android:text="onResume"
        android:layout_below="@+id/txtv_on_restart_act2"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txtv_on_pause_act2"
        android:text="onPause"
        android:layout_below="@+id/txtv_on_resume_act2"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txtv_on_stop_act2"
        android:text="onStop"
        android:layout_below="@+id/txtv_on_pause_act2"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/txtv_on_destroy_act2"
        android:text="onDestroy"
        android:layout_below="@+id/txtv_on_stop_act2"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>
