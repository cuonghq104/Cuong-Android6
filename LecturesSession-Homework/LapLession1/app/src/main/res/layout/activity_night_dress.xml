<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/girl_dressing"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <RelativeLayout
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_alignParentBottom="true"
                android:background="#A8000000">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Night dress"
                    android:textColor="#FFFFFF"
                    android:textSize="28dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="available in many color"
                    android:textSize="28dp"
                    android:textColor="#FFFFFF"
                    android:layout_below="@id/tv_name"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_alignParentBottom="true">

                    <TextView
                        android:id="@+id/tv_add_to_card"
                        android:layout_weight="2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Add to cart"
                        android:textColor="#FFFFFF"
                        android:textSize="20dp"
                        android:gravity="center"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:background="@color/red"/>

                    <LinearLayout

                        android:layout_toRightOf="@id/tv_add_to_card"
                        android:layout_centerVertical="true"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_alignParentRight="true">

                        <View
                            android:layout_weight="2"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"/>

                        <ImageView
                            android:src="@drawable/heart_shape"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent" />

                        <View
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"/>

                        <ImageView
                            android:src="@drawable/bookmark_shape"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent" />

                        <View
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"/>

                        <ImageView
                            android:src="@drawable/share_shape"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent" />
                    </LinearLayout>
                </RelativeLayout>
        </RelativeLayout>
            
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:layout_width="match_parent"
            android:layout_height="120dp">

            <TextView
                android:layout_centerHorizontal="true"
                android:text="Colors"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            
            <LinearLayout
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="40dp">

                <ImageView
                    android:src="@drawable/black"
                    android:scaleType="fitCenter"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />

                <ImageView
                    android:src="@drawable/light_blue"
                    android:scaleType="fitCenter"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_marginLeft="15dp"
                    android:layout_height="match_parent" />

                <ImageView
                    android:src="@drawable/dark_blue"
                    android:scaleType="fitCenter"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_marginLeft="15dp"
                    android:layout_height="match_parent" />

                <ImageView
                    android:src="@drawable/orange"
                    android:scaleType="fitCenter"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_marginLeft="15dp"
                    android:layout_height="match_parent" />
            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:layout_width="match_parent"
            android:layout_height="120dp">

            <TextView
                android:layout_centerHorizontal="true"
                android:text="Sizes"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal"
                android:layout_width="200dp"
                android:layout_height="40dp">

                <ImageView
                    android:src="@drawable/s"
                    android:scaleType="centerInside"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_marginLeft="15dp"
                    android:layout_height="match_parent" />

                <RelativeLayout
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <ImageView
                        android:src="@drawable/orange"
                        android:scaleType="centerInside"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                    <ImageView
                        android:src="@drawable/m"
                        android:scaleType="centerInside"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </RelativeLayout>

                <ImageView
                    android:src="@drawable/l"
                    android:scaleType="centerInside"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_marginLeft="15dp"
                    android:layout_height="match_parent" />

                <ImageView
                    android:src="@drawable/xl"
                    android:scaleType="centerInside"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_marginLeft="15dp"
                    android:layout_height="match_parent" />
            </LinearLayout>

        </RelativeLayout>

        <TextView
            android:layout_marginTop="10dp"
            android:background="@color/red"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Add to card"/>


        <TextView
            android:layout_marginTop="10dp"
            android:layout_centerVertical="true"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:text="Available within 2-4 business days Express -Delivery available"/>

        <RelativeLayout
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_alignParentTop="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="Details"/>

                <TextView
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-various leather applications and patches."/>

                <TextView
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-Rib knit cuffs and hem."/>

                <TextView
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-Contains non-texible parts of animal origin."/>


                <TextView
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-Length: medium."/>
            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>
</ScrollView>