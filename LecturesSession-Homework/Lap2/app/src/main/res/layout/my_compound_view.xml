<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_value"
        android:layout_centerHorizontal="true"
        android:textSize="30dp"
        android:textColor="#000000"
        android:text="50"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VALUE"
        android:textColor="#000000"
        android:layout_below="@id/tv_value"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/bt_subtract"
        android:layout_marginRight="20dp"
        android:background="@drawable/ultra_subtract"
        android:layout_toLeftOf="@id/tv_value"
        android:layout_width="60dp"
        android:layout_height="60dp" />

    <Button
        android:id="@+id/bt_add"
        android:layout_marginLeft="20dp"
        android:background="@drawable/ultra_add"
        android:layout_toRightOf="@id/tv_value"
        android:layout_width="60dp"
        android:layout_height="60dp" />
</RelativeLayout>